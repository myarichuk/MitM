{
   "configurations": [
      
      {
         "name": "Debug Local: ServiceA",
         "type": "python",
         "request": "launch",
         "module": "flask",
         "env": {
            "FLASK_APP": "ServiceA/runserver.py",
            "FLASK_ENV": "development"
         },
         "args": [
            "run",
            "--no-debugger"
         ],
         "jinja": true
      },
      {
         "name": "Debug Local: ServiceB",
         "type": "python",
         "request": "launch",
         "module": "flask",
         "env": {
            "FLASK_APP": "ServiceB/runserver.py",
            "FLASK_ENV": "development"
         },
         "args": [
            "run",
            "--no-debugger"
         ],
         "jinja": true
      },
      {
         "name": "Debug ServiceA",
         "type": "python",
         "request": "attach",
         "connect": {
            "host": "localhost",
            "port": 5678
         },
         "python": {
            "pathMappings": [
               {
                  "localRoot": "${workspaceFolder}",
                  "remoteRoot": "/app"
               }
            ],
            "projectType": "flask"
         }
      },
      {
         "name": "Debug ServiceB",
         "type": "python",
         "request": "attach",
         "connect": {
            "host": "localhost",
            "port": 5679
         },
         "python": {
            "pathMappings": [
               {
                  "localRoot": "${workspaceFolder}",
                  "remoteRoot": "/app"
               }
            ],
            "projectType": "flask"
         }
      }     
   ]
}